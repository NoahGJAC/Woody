<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Woody.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Woody"
    xmlns:views="clr-namespace:Woody.Views">


    <!--landing page-->
    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate views:LoginPage}"
    Route="LoginPage"/>
    
    
    <TabBar Route="Index">
        <Tab Title="Home" Route="HomePage">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Dashboard" Route="DashboardPage">
            <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate views:DashboardPage}" />
            <ShellContent Title="Security" ContentTemplate="{DataTemplate views:SecurityPage}" />
        </Tab>
        <Tab Title="Map" Route="MapPage">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}" />
        </Tab>
        <Tab Title="Analytics" Route="AnalyticsPage">
            <ShellContent ContentTemplate="{DataTemplate views:AnalyticsPage}" />
        </Tab>
        <Tab Title="Tasks" Route="TasksPage">
            <ShellContent ContentTemplate="{DataTemplate views:TasksPage}" />
        </Tab>
    </TabBar>
</Shell>
