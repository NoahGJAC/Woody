<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Woody.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="{StaticResource BackgroundAccent500}">
            <!--  User settings and profile  -->
            <HorizontalStackLayout Margin="15,15,15,5" HorizontalOptions="End">
                <ImageButton
                    x:Name="btn_user_options"
                    Margin="0,0,5,0"
                    Clicked="btn_user_options_Clicked"
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="gear.png"
                    VerticalOptions="Center" />
                <Image
                    Aspect="AspectFill"
                    HeightRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    Source="dummy_user.png"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="50">
                    <Image.Clip>
                        <EllipseGeometry
                            Center="25,25"
                            RadiusX="25"
                            RadiusY="25" />
                    </Image.Clip>
                </Image>
            </HorizontalStackLayout>

            <!--  Greeting  -->
            <Label
                Margin="30,0,0,0"
                FontAttributes="Bold"
                FontFamily="OpenSansBold"
                FontSize="Title"
                HorizontalOptions="Start"
                HorizontalTextAlignment="Start"
                Text="It's good to see you!"
                VerticalOptions="Center" />
            <Label
                Margin="30,0,0,50"
                CharacterSpacing="0.5"
                FontAttributes="Bold"
                FontFamily="OpenSansBold"
                FontSize="Subtitle"
                HorizontalOptions="Start"
                HorizontalTextAlignment="Start"
                Text="Here is how things are going"
                TextColor="{StaticResource Gray500}"
                VerticalOptions="Center" />

            <!--  Container status  -->
            <!--  TODO: Make icons bigger  -->
            <Frame
                BackgroundColor="{StaticResource BackgroundAccent300}"
                BorderColor="Transparent"
                CornerRadius="40"
                HeightRequest="400">
                <StackLayout Margin="15,5,15,5">

                    <!--  Header  -->
                    <Label
                        FontAttributes="Bold"
                        FontFamily="OpenSansBold"
                        FontSize="Large"
                        Text="Container" />

                    <!--  Plant Wellbeing  -->
                    <Frame
                        Margin="0,10,0,5"
                        BackgroundColor="White"
                        BorderColor="Transparent"
                        HeightRequest="60">
                        <HorizontalStackLayout>
                            <Image Source="warning.png" />
                            <Label
                                Margin="15,-1.5,0,0"
                                FontFamily="OpenSansBold"
                                FontSize="16"
                                Text="Plant wellbeing"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!--  Security  -->
                    <Frame
                        Margin="0,5,0,5"
                        BackgroundColor="White"
                        BorderColor="Transparent"
                        HeightRequest="60">
                        <HorizontalStackLayout>
                            <Image Source="check.png" />
                            <Label
                                Margin="15,-1.5,0,0"
                                FontAttributes="Bold"
                                FontFamily="OpenSansBold"
                                FontSize="16"
                                Text="Security"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!--  Location  -->
                    <Frame
                        Margin="0,10,0,5"
                        BackgroundColor="White"
                        BorderColor="Transparent"
                        HeightRequest="60">
                        <HorizontalStackLayout>
                            <Image Source="check.png" />
                            <Label
                                Margin="15,-1.5,0,0"
                                FontAttributes="Bold"
                                FontFamily="OpenSansBold"
                                FontSize="16"
                                Text="Location"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                        </HorizontalStackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!--  Tasks Coming Up  -->
            <Frame
                Margin="0,-100,0,0"
                BackgroundColor="{StaticResource BackgroundAccent200}"
                BorderColor="Transparent"
                CornerRadius="40"
                MinimumHeightRequest="375">
                <StackLayout Margin="15,5,15,5">
                    <!--  Header  -->
                    <Label
                        FontAttributes="Bold"
                        FontFamily="OpenSansBold"
                        FontSize="Large"
                        Text="Coming Up" />

                    <!--  Task List  -->
                    <Frame
                        Margin="0,10,0,0"
                        BackgroundColor="White"
                        CornerRadius="20"
                        MinimumHeightRequest="100">
                        <StackLayout VerticalOptions="Center">
                            <!--  Task #1  -->
                            <HorizontalStackLayout Margin="0,0,0,7">
                                <Ellipse
                                    Fill="{StaticResource AllGoodGreen}"
                                    HeightRequest="15"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                                <StackLayout Margin="15,0,0,0">
                                    <Label
                                        Margin="0,-1.5,0,0"
                                        FontFamily="OpenSansBold"
                                        FontSize="16"
                                        Text="Refill water tank"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                    <Label
                                        FontSize="12"
                                        Text="Due today at 9:30 AM"
                                        TextColor="{StaticResource Gray600}" />
                                </StackLayout>
                            </HorizontalStackLayout>

                            <!--  Task #2  -->
                            <HorizontalStackLayout Margin="0,7,0,7">
                                <Ellipse
                                    Fill="{StaticResource WarningYellow}"
                                    HeightRequest="15"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                                <StackLayout Margin="15,0,0,0">
                                    <Label
                                        Margin="0,-1.5,0,0"
                                        FontFamily="OpenSansBold"
                                        FontSize="16"
                                        Text="Trim roots"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                    <Label
                                        FontSize="12"
                                        Text="Due Saturday at 1:00 PM"
                                        TextColor="{StaticResource Gray600}" />
                                </StackLayout>
                            </HorizontalStackLayout>

                            <!--  Task #3  -->
                            <HorizontalStackLayout Margin="0,7,0,7">
                                <Ellipse
                                    Fill="{StaticResource WarningYellow}"
                                    HeightRequest="15"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                                <StackLayout Margin="15,0,0,0">
                                    <Label
                                        Margin="0,-1.5,0,0"
                                        FontFamily="OpenSansBold"
                                        FontSize="16"
                                        Text="Harvest tomatoes"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                    <Label
                                        FontSize="12"
                                        Text="Due next Monday at 11:00 AM"
                                        TextColor="{StaticResource Gray600}" />
                                </StackLayout>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>
            <Rectangle
                Margin="0,-100,0,0"
                BackgroundColor="{StaticResource BackgroundAccent200}"
                HeightRequest="5" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>