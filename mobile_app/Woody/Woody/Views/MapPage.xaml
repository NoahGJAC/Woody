<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Woody.Views.MapPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Woody.Converters"
    xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
    xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
    Title="">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToVibrationConverter x:Key="BoolToVibrationConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout BackgroundColor="{StaticResource BackgroundAccent300}">
        <Map
            x:Name="map"
            HeightRequest="365"
            IsShowingUser="True"
            MapType="Street">
            <x:Arguments>
                <MapSpan>
                    <x:Arguments>
                        <sensors:Location>
                            <x:Arguments>
                                <x:Double>45.399222487535</x:Double>
                                <x:Double>-74.04318606215</x:Double>
                            </x:Arguments>
                        </sensors:Location>
                        <x:Double>0.01</x:Double>
                        <x:Double>0.01</x:Double>
                    </x:Arguments>
                </MapSpan>
            </x:Arguments>
            <Map.Pins>
                <Pin Label="Container 1" Type="SavedPin">
                    <Pin.Location>
                        <sensors:Location>
                            <x:Arguments>
                                <x:Double>45.399222487535</x:Double>
                                <x:Double>-74.04318606215</x:Double>
                            </x:Arguments>
                        </sensors:Location>
                    </Pin.Location>
                </Pin>
            </Map.Pins>
        </Map>
        <!--  Container status  -->
        <!--  TODO: Make icons bigger  -->
        <Frame
            BackgroundColor="{StaticResource White}"
            BorderColor="Transparent"
            CornerRadius="40">
            <StackLayout Margin="15,5,15,15">
                <HorizontalStackLayout>
                    <Image
                        Margin="5,0,0,0"
                        HeightRequest="25"
                        Source="warning.png"
                        VerticalOptions="Center" />
                    <Label
                        Margin="15,0,0,0"
                        FontFamily="OpenSansBold"
                        FontSize="20"
                        Text="Details" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,0,0,15" Spacing="5">
                    <HorizontalStackLayout Margin="0,15,0,0">
                        <!--  Roll  -->
                        <Frame
                            Margin="0,0,10,0"
                            Padding="0"
                            BackgroundColor="{StaticResource AllGoodGreen}"
                            BorderColor="Transparent"
                            CornerRadius="20"
                            HeightRequest="100"
                            WidthRequest="100">
                            <StackLayout
                                Padding="0"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label
                                    Margin="0,0,0,0"
                                    FontSize="11.5"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Roll Angle" />
                                <Label
                                    Margin="0,-5,0,0"
                                    FontFamily="OpenSansBold"
                                    FontSize="25"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="34.0°" />
                            </StackLayout>
                        </Frame>

                        <!--  Vibration Levels  -->
                        <Frame
                            Margin="0,0,10,0"
                            Padding="0"
                            BackgroundColor="{StaticResource MediumAllGoodGreen}"
                            BorderColor="Transparent"
                            CornerRadius="20"
                            HeightRequest="100"
                            WidthRequest="100">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Label
                                    Margin="0,0,0,0"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Vibration" />

                                <!--
                                    Uncomment and add into vibrating label when backend setup
                                    Text="{Binding whatever, Converter={StaticResource BoolToVibrationConverter}}"
                                -->
                                <Label
                                    Margin="0,-5,0,0"
                                    FontFamily="OpenSansBold"
                                    FontSize="25"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="None" />
                            </StackLayout>
                        </Frame>

                        <!--  Pitch  -->
                        <Frame
                            Padding="0"
                            BackgroundColor="{StaticResource LightAllGoodGreen}"
                            BorderColor="Transparent"
                            CornerRadius="20"
                            HeightRequest="100"
                            WidthRequest="100">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Label
                                    Margin="0,0,0,0"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Pitch Angle" />
                                <Label
                                    Margin="0,-5,0,0"
                                    FontFamily="OpenSansBold"
                                    FontSize="25"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="34.0°" />
                            </StackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <VerticalStackLayout>
                    <!--  Coordinates  -->
                    <Frame
                        Margin="0,0,0,0"
                        Padding="20,0,0,0"
                        BackgroundColor="{StaticResource MediumWarningYellow}"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="60"
                        WidthRequest="325">
                        <HorizontalStackLayout>
                            <!--  Latitude  -->
                            <Image
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="latitude.png"
                                VerticalOptions="Center" />
                            <Label
                                Margin="10,0,0,0"
                                FontSize="16"
                                Text="Latitude is at "
                                VerticalOptions="Center" />
                            <Label
                                FontFamily="OpenSansBold"
                                FontSize="16"
                                Text="45.399222"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame
                        Margin="0,10,0,0"
                        Padding="20,0,0,0"
                        BackgroundColor="{StaticResource LightWarningYellow}"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="60"
                        WidthRequest="325">
                        <HorizontalStackLayout>
                            <!--  Longetitude  -->
                            <Image
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="longetitude.png"
                                VerticalOptions="Center" />
                            <Label
                                Margin="10,0,0,0"
                                FontSize="16"
                                Text="Longetitude is at "
                                VerticalOptions="Center" />
                            <Label
                                FontFamily="OpenSansBold"
                                FontSize="16"
                                Text="-74.043186"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </StackLayout>
        </Frame>
        <Rectangle
            Margin="0,-100,0,0"
            BackgroundColor="{StaticResource White}"
            HeightRequest="5" />
    </VerticalStackLayout>
</ContentPage>