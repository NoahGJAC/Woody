<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Woody.Views.SecurityPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:converter="clr-namespace:Woody.Converters"
    Title=""
    BindingContext="App.SecurityRepo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:BoolToLockUnlockConverter x:Key="BoolToLockUnlockConverter" />
            <converter:BoolToOnOffConverter x:Key="BoolToOnOffConverter" />
            <converter:BoolToOpenClosedConverter x:Key="BoolToOpenClosedConverter" />
            <converter:BoolToMotionDetectedConverter x:Key="BoolToMotionDetectedConverter" />
            <converter:BoolToDoubleConverter x:Key="BoolToDoubleConverter" />
            <converter:LowHighLevelToColorConverter x:Key="LowHighLevelToColorConverter"/>
            <converter:LuminosityValueToLevelConverter x:Key="LuminosityToLevelConverter"/>
            <converter:NoiseValueToLevelConverter x:Key="NoiseToLevelConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>

        <VerticalStackLayout BackgroundColor="{StaticResource BackgroundAccent300}">
            <!-- Latest Graph Readings-->
            <Frame Margin="15,15,15,0"
                BackgroundColor="{StaticResource White}"
                BorderColor="Transparent"
                CornerRadius="10">
                <!--  Header  -->
                <StackLayout>
                    <HorizontalStackLayout>
                        <Image
                            Margin="5,0,0,0"
                            HeightRequest="23"
                            Source="lighting_bulb.png"
                            VerticalOptions="Center" />
                        <Label
                            Margin="15,0,0,0"
                            FontFamily="OpenSansBold"
                            FontSize="20"
                            Text="Latest Readings" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Margin="0,15,0,0" HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand">

                        <Grid Margin="15,0,0,0" HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="9*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                                 <!--  Luminosity  -->

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    Text="LUMINOSITY"
                                    VerticalOptions="Center" />

                                <Label
                                Grid.Row="0"  
                                Grid.Column="1"
                                x:Name="LabelLuminosity"
                                Margin="0,-5,0,0"
                                FontFamily="OpenSansBold"
                                FontSize="22"
                                HorizontalOptions="End"
                                HorizontalTextAlignment="End"
                                Text="{Binding LuminosityCurrent.Value, Converter={StaticResource LuminosityToLevelConverter}}" />
                                
                                <!--  Noise  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    Text="NOISE"
                                    VerticalOptions="Center" />

                                <Label
                                    Grid.Row="1"
                                    x:Name="LabelNoise"
                                    Margin="0,-5,0,0"
                                    FontFamily="OpenSansBold"
                                    FontSize="22"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"
                                    Grid.Column="1"
                                    Text="{Binding NoiseCurrent.Value, Converter={StaticResource NoiseToLevelConverter}}" />
                        </Grid>
                    </HorizontalStackLayout>
                </StackLayout>
            </Frame>
            <Frame
                Margin="15,15,15,0"
                BackgroundColor="{StaticResource White}"
                BorderColor="Transparent"
                CornerRadius="10">
                <StackLayout>
                    <!--  Header  -->
                    <HorizontalStackLayout>
                        <Image
                            Margin="5,0,0,0"
                            HeightRequest="23"
                            Source="security.png"
                            VerticalOptions="Center" />
                        <Label
                            Margin="15,0,0,0"
                            FontFamily="OpenSansBold"
                            FontSize="20"
                            Text="Sensors" />
                    </HorizontalStackLayout>
                    <!--  Carousel for Graphs  -->
                    <CarouselView
                        x:Name="ChartCarousel"
                        ItemsSource="{Binding Charts}"
                        Loop="True">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <charts:CartesianChart
                                    Title="{Binding Title}"
                                    HeightRequest="280"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    ZoomMode="ZoomX" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <!--  Carousel navigation  -->
                    <IndicatorView
                        x:Name="IndicatorView"
                        Count="{Binding Charts.Count}"
                        HorizontalOptions="Center"
                        Position="{Binding Source={x:Reference ChartCarousel}, Path=Position}" />
                </StackLayout>
            </Frame>


            <Frame
                Margin="15,15,15,0"
                Padding="15,15,30,0"
                BackgroundColor="{StaticResource White}"
                BorderColor="Transparent"
                CornerRadius="10"
                HeightRequest="135">
                <StackLayout>
                    <!--  Header  -->
                    <HorizontalStackLayout>
                        <Image
                            Margin="5,0,0,0"
                            HeightRequest="27"
                            Source="lighting_bulb.png"
                            VerticalOptions="Center" />
                        <Label
                            Margin="15,0,0,0"
                            FontFamily="OpenSansBold"
                            FontSize="20"
                            Text="Control Panel" />
                    </HorizontalStackLayout>

                    <!--  Buzzer  -->
                    <Grid Margin="15,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontSize="12"
                            HorizontalOptions="Start"
                            Text="BUZZER"
                            VerticalOptions="Center" />
                        <Grid
                            Grid.Column="1"
                            HorizontalOptions="End"
                            VerticalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontFamily="OpenSansBold"
                                HorizontalOptions="End"
                                Text="OFF"
                                VerticalOptions="Center" />
                            <Switch
                                x:Name="BuzzerSwitch"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                IsToggled="{Binding BuzzerState.Value}"
                                Toggled="BuzzerSwitch_Toggled"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                FontFamily="OpenSansBold"
                                HorizontalOptions="Start"
                                Text="ON"
                                VerticalOptions="Center" />
                        </Grid>
                    </Grid>

                    <!--  Lock  -->
                    <Grid Margin="15,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontSize="12"
                            HorizontalOptions="Start"
                            Text="DOOR LOCK"
                            VerticalOptions="Center" />
                        <Button
                            Grid.Column="1"
                            Padding="0"
                            Clicked="ButtonLock_Clicked"
                            FontFamily="OpenSansBold"
                            HeightRequest="30"
                            HorizontalOptions="End"
                            Text="{Binding LockState.Value, Converter={StaticResource BoolToLockUnlockConverter}}"
                            VerticalOptions="Center"
                            WidthRequest="100" />
                    </Grid>
                </StackLayout>
            </Frame>

            <!--  Door  -->
            <Frame
                Margin="0,15,0,0"
                Padding="20,0,0,0"
                BackgroundColor="{StaticResource White}"
                BorderColor="Transparent"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="360">
                <HorizontalStackLayout>
                    <Image
                        HeightRequest="30"
                        HorizontalOptions="Center"
                        Source="open_door.png"
                        VerticalOptions="Center" />
                    <Label
                        Margin="10,0,0,0"
                        FontFamily="OpenSansSemiBold"
                        FontSize="16"
                        Text="Door is "
                        VerticalOptions="Center" />
                    <Label
                        FontFamily="OpenSansBold"
                        FontSize="16"
                        Text="{Binding DoorState.Value, Converter={StaticResource BoolToOpenClosedConverter}}"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>


            <!--  Motion  -->
            <Frame
                Margin="0,15,0,0"
                Padding="20,0,0,0"
                BackgroundColor="{StaticResource White}"
                BorderColor="Transparent"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="360">
                <HorizontalStackLayout>
                    <Image
                        HeightRequest="30"
                        HorizontalOptions="Center"
                        Source="radar.png"
                        VerticalOptions="Center" />
                    <Label
                        Margin="10,0,0,0"
                        FontFamily="OpenSansSemiBold"
                        FontSize="16"
                        Text="Motion sensors detect "
                        VerticalOptions="Center" />
                    <Label
                        FontFamily="OpenSansBold"
                        FontSize="16"
                        Text="{Binding MotionState.Value, Converter={StaticResource BoolToMotionDetectedConverter}}"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>