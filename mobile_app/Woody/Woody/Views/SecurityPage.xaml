<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Woody.Views.SecurityPage"
             xmlns:charts="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             BindingContext="App.SecurityRepo"
    Title="SecurityPage">
    <StackLayout>
        <!-- Carousel for Graphs -->
        <CarouselView x:Name="ChartCarousel" ItemsSource="{Binding Charts}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <charts:CartesianChart
                       Series="{Binding Series}" 
                       XAxes="{Binding XAxes}" 
                       YAxes="{Binding YAxes}"
                       Title="{Binding Title}" 
                       ZoomMode="ZoomX"
                       HeightRequest="280"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <!--<charts:CartesianChart x:Name="ChartNoise"
                       Series="{Binding Series}" 
                       XAxes="{Binding XAxes}" 
                       YAxes="{Binding YAxes}"
                       Title="{Binding Title}" 
                       ZoomMode="ZoomX"
                       HeightRequest="280"/>-->

        <!-- Indicators -->
        <Label Text="{Binding DoorLockStatus}" />
        <Label Text="{Binding DoorOpenClosedStatus}" />
        <Label Text="{Binding MotionDetected}" />
        <Label Text="{Binding SecurityBuzzerStatus}" />
    </StackLayout>
</ContentPage>